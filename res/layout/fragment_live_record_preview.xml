    </FrameLayout>
    <FrameLayout android:layout_gravity="bottom" android:id="@id/vv_preview_bottom_action" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <FrameLayout android:id="@id/vv_preview_bottom_parent" android:clipChildren="false" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageView android:layout_gravity="start|center" android:id="@id/live_preview_back" android:background="@drawable/bg_thumbnail_background_full" android:layout_width="@dimen/bottom_picker_width" android:layout_height="@dimen/bottom_picker_width" android:src="@drawable/ic_vector_close" android:scaleType="centerInside" android:contentDescription="@string/accessibility_live_edit_exit_button" android:layout_marginStart="@dimen/bottom_picker_margin" />
