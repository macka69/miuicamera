            <ImageView android:layout_gravity="center" android:id="@id/live_save_progress" android:focusable="false" android:layout_width="@dimen/vv_progress_save_width" android:layout_height="@dimen/vv_progress_save_width" android:src="@drawable/ic_vv_save_progress" android:scaleType="centerCrop" android:contentDescription="@string/accessibility_shutter_saving_button" />
            <ImageView android:layout_gravity="end|center" android:id="@id/live_preview_share" android:background="@drawable/bg_thumbnail_background_full" android:focusable="false" android:layout_width="@dimen/bottom_picker_width" android:layout_height="@dimen/bottom_picker_width" android:src="@drawable/ic_vector_share" android:scaleType="centerInside" android:contentDescription="@string/live_edit_share_title" android:layout_marginEnd="@dimen/bottom_picker_margin" />
            <ProgressBar android:layout_gravity="end|center" android:id="@id/live_share_progress" android:background="@drawable/bg_thumbnail_background_full" android:padding="12.0dip" android:layout_width="@dimen/bottom_picker_width" android:layout_height="@dimen/bottom_picker_width" android:scaleType="centerInside" android:indeterminateDrawable="@drawable/live_share_progress" android:indeterminateDuration="@integer/post_process_duration" android:contentDescription="@string/accessibility_shutter_saving_button" android:layout_marginEnd="@dimen/bottom_picker_margin" style="?android:progressBarStyleLarge" />
