    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@id/live_share_layout" android:background="@drawable/bg_live_share" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView android:id="@id/live_share_list" android:layout_width="fill_parent" android:layout_height="@dimen/live_share_list_height" />
        <View android:background="@color/live_share_divider_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
        <TextView android:textSize="@dimen/live_share_cancel_text" android:textColor="@color/live_share_cancel_text" android:gravity="center" android:id="@id/live_share_cancel" android:layout_width="fill_parent" android:layout_height="@dimen/live_share_cancel_height" android:text="@string/live_music_close_cancel_message" />
    </LinearLayout>
</FrameLayout>